<% if user_signed_in? %>
  <% if @friend.user == current_user %>
    <div class="jumbotron shadow">
      <div class="d-flex justify-content-between">
        <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name %></h1>
        <div class="mt-2">
          <%= link_to "Back", friends_path, class:"btn btn-secondary" %>
        </div>
      </div>
      <h3><a href='mailto:<%=@friend.email%>'><%= @friend.email %></a> | <%= @friend.phone %> | <%= @friend.socials %></h3>
      <hr class="my-4">
      <div class="d-flex mt-3">
        <%= link_to "Edit", edit_friend_path(@friend), class:'btn btn-warning mr-2' %>
        <%= button_to "Delete", @friend, method: :delete, data: { confirm: 'Are you sure you want to delete this item?' }, class:'btn btn-danger' %>
      </div>
    </div>
  <% end %>
<% else %>
  <h1>hello world</h1>
<% end %>
